<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <ImageView
                android:id="@+id/landmarkImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/landmarkName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="24sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/landmarkDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
        <Button
                android:id="@+id/satellite_button"
                style="@style/button_default"
                android:text="Satellite" android:layout_width="185dp"/>

        <Button
                android:id="@+id/hybrid_button"
                style="@style/button_default"
                android:text="Hybrid" android:layout_marginLeft="5dp"/>
    </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="251dp"
                android:layout_marginBottom="16dp">
            <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </FrameLayout>
        <Button
                android:text="Back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/back_button"/>


    </LinearLayout>
</ScrollView>
